@model IEnumerable<TLoaiHang>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>Tất cả loại hàng</span>
        </div>
        <ul>
            @foreach (var item in Model)
            {
                <li><a asp-controller="Home" asp-action="Category" asp-route-categoryId="@item.MaLoaiHang">@item.TenLoaiHang</a></li>
            }
        </ul>
    </div>
</div>