@model TSanPham
<div class="col-lg-4 col-md-6 col-sm-6">
    <div class="product__item">
        <div class="product__item__pic set-bg" data-setbg=@Url.Content("../ProductImages/" + @Model.AnhSanPham)>
            <ul class="product__item__pic__hover">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="product__item__text">
            <h6><a asp-controller="Home" asp-action="Detail" asp-route-productId="@Model.MaSanPham">@Model.TenSanPham</a></h6>
            <h5>@(Model.DonGiaBan.HasValue ? Model.DonGiaBan.Value.ToString("#,##0") + " VND" : "N/A")</h5>
        </div>
    </div>
</div>