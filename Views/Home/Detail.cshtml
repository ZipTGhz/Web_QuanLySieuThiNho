@model TSanPham
<section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@Model.TenSanPham</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <a href="./index.html">Vegetables</a>
                        <span>@Model.TenSanPham</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src=@Url.Content("../ProductImages/" + Model.AnhSanPham) alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <img data-imgbigurl="../img/product/details/product-details-2.jpg"
                             src="../img/product/details/thumb-1.jpg" alt="">
                        <img data-imgbigurl="../img/product/details/product-details-3.jpg"
                             src="../img/product/details/thumb-2.jpg" alt="">
                        <img data-imgbigurl="../img/product/details/product-details-5.jpg"
                             src="../img/product/details/thumb-3.jpg" alt="">
                        <img data-imgbigurl="../img/product/details/product-details-4.jpg"
                             src="../img/product/details/thumb-4.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.TenSanPham</h3>
                    <div class="product__details__price">@(Model.DonGiaBan.HasValue ? Model.DonGiaBan.Value.ToString("#,##0") + " VND" : "N/A")</div>
                    <p>                                                                                                                                                                                                                                                                                                                                                                                                                     </p>
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.MaSanPham" />
                        <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="qty">
                                    <input type="number" name="quantity" value="1" min="1" max="@Model.SoLuong">
                                </div>
                            </div>
                        </div>
                        <button type="sumbit" class="primary-btn" >THÊM VÀO GIỎ</button>
                    </form>
                    <ul>
                        <li><b>Tình trạng</b> <span>@(Model.SoLuong != 0 ? "Còn hàng" : "Hết hàng") </span></li>
                        <li><b>Vận chuyển</b> <span>Miễn phí giao hàng trong bán kính 2 km.</span></li>
                        <li><b>Trọng lượng</b> <span>@Model.TrongLuong</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                               aria-selected="true">Mô tả</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Thông tin sản phẩm</h6>
                                <p>@Model.MoTa</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
