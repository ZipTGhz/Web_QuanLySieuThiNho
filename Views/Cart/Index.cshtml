@model TGioHang

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Giỏ hàng</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Giỏ hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Sản phẩm</th>
                                <th>Giá tiền</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.TSanPhamGioHangs != null && Model.TSanPhamGioHangs.Any())
                            {
                                @foreach (var item in Model.TSanPhamGioHangs)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img width="100" height="100" src=@Url.Content("../ProductImages/" + @item.MaSanPhamNavigation.AnhSanPham) alt="">
                                            <h5>@item.MaSanPhamNavigation.TenSanPham</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.DonGiaBan.Value.ToString("#,##0") VND
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="qty">
                                                    <input type="number" name="quantities[@item.MaSanPham]" min="1" max=@item.MaSanPhamNavigation.SoLuong value=@item.SoLuong onchange="updateCartItem('@item.MaSanPham', this.value)">
                                                </div>
                                            </div>
                                        </td>
                                        <td id="totalAmount_@item.MaSanPham" class="shoping__cart__total">
                                            @item.TongTienSanPham.Value.ToString("#,##0") VND
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <span class="icon_close"></span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action="Index" class="primary-btn cart-btn">TIẾP TỤC MUA SẮM</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Cập nhật giỏ hàng
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Tổng giá trị giỏ hàng</h5>
                    <ul>
                        <li>Tổng <span id="totalAmountCart">@Model.TongTienGioHang.Value.ToString("#,##0") VND</span></li>
                    </ul>
                    <a asp-controller="Cart" asp-action="Checkout" class="primary-btn">TIẾN HÀNH THANH TOÁN</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function updateCartItem(productId, quantity) {
        $.ajax({
            url: '@Url.Action("UpdateCart", "Cart")', // Đường dẫn đến action UpdateCart
            type: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            success: function (response) {
                // Cập nhật lại giá trị tổng giỏ hàng hoặc làm mới một phần của trang nếu cần
                // Bạn có thể cập nhật lại tổng giá trị giỏ hàng tại đây
                $('#totalAmount_' + productId).text(response.totalAmountCartItem + " VND");
                $('#totalAmountCart').text(response.totalAmountCart + " VND");
            },
            error: function (xhr, status, error) {
                console.error("Error updating cart: ", error);
            }
        });
    }

</script>

