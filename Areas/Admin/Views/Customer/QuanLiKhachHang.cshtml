@{
    ViewData["Title"] = "Quan li nguoi dung";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using Web_QuanLySieuThiNho.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TKhachHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Danh sách khách hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Tên khách hàng
            </th>
            <th>
                Giới tính 
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKh)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    <a asp-action="SuaKhachHang" asp-route-maKh="@item.MaKh">Sửa</a> |
                    <a href="#" onclick="confirmDelete('@item.MaKh')">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("DanhMucSanPham", new { pageNumber = page }))
</div>
<script>
    function confirmDelete(maKh) {
        var result = confirm("Bạn có chắc chắn muốn xóa nhân viên này không?");
        if (result) {
            // Nếu người dùng nhấn OK, chuyển hướng đến URL xóa nhân viên
            window.location.href = '/Admin/User/XoaKhachHang?maKh=' + maKh;
        }
    }
</script>